  position: absolute;
  bottom: 6px;
  left: 50%;
  transform: translateX(-50%);
  width: 16px;
  height: 20px;
  background: #FF4500;
  clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
  animation: flicker 0.5s infinite alternate;
}

.spark {
  position: absolute;
  bottom: 26px;
  left: 50%;
  width: 4px;
  height: 4px;
  background: #FFA500;
  border-radius: 50%;
}

.spark1 { animation: spark1 2s infinite; }
.spark2 { animation: spark2 2.5s infinite; }
.spark3 { animation: spark3 1.8s infinite; }

.logs {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40px;
  height: 10px;
  background: #8B4513;
