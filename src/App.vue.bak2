/* Medieval Characters */
.medieval-characters {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120px;
  z-index: 1;
  pointer-events: none;
  display: flex;
  justify-content: space-around;
  padding: 0 50px;
}

.character {
  width: 32px;
  height: 48px;
  position: relative;
  image-rendering: pixelated;

  &.knight {
    &::before {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      background: var(--knight-color);
      clip-path: polygon(
        50% 0%,    /* helmet top */
        70% 20%,   /* helmet right */
        70% 60%,   /* body right */
        100% 60%,  /* sword right */
        100% 80%,  /* sword bottom */
        60% 80%,   /* legs right */
        50% 100%,  /* feet */
        40% 80%,   /* legs left */
        0% 80%,    /* sword left */
        0% 60%,    /* sword left */
        30% 60%,   /* body left */
        30% 20%    /* helmet left */
      );
      animation: knightIdle 1s infinite alternate;
    }
  }

  &.wizard {
    &::before {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      background: var(--wizard-color);
      clip-path: polygon(
        50% 0%,    /* hat top */
        80% 30%,   /* hat brim */
        60% 40%,   /* head */
        60% 70%,   /* robe */
        70% 100%,  /* bottom right */
        30% 100%,  /* bottom left */
        40% 70%,   /* robe */
        40% 40%,   /* head */
        20% 30%    /* hat brim */
      );
      animation: wizardFloat 2s infinite alternate;
    }
  }

  &.archer {
    &::before {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      background: var(--archer-color);
      clip-path: polygon(
        50% 10%,   /* hood top */
        70% 30%,   /* hood right */
        60% 50%,   /* body */
        90% 40%,   /* bow top */
        90% 60%,   /* bow bottom */
        60% 70%,   /* body */
        60% 100%,  /* legs right */
        40% 100%,  /* legs left */
        40% 70%,   /* body */
        10% 60%,   /* bow bottom */
        10% 40%,   /* bow top */
        40% 50%,   /* body */
        30% 30%    /* hood left */
      );
      animation: archerAim 2s infinite alternate;
    }
  }
}

