  &.is-success {
    color: #92CC41;
    text-shadow: var(--text-shadow);
  }
  
  &.is-warning {
    color: #F7D51D;
    text-shadow: var(--text-shadow);
  }
  
  &.is-error {
    color: #E76E55;
    text-shadow: var(--text-shadow);
  }
