  100% { transform: translate(-5px, -30px); opacity: 0; }
}

/* Enhanced Background */
body {
  &::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      /* Stone pattern */
      linear-gradient(45deg, 
        rgba(60, 60, 60, 0.1) 25%, 
        transparent 25%,
        transparent 75%,
        rgba(60, 60, 60, 0.1) 75%
      ),
      linear-gradient(-45deg,
        rgba(60, 60, 60, 0.1) 25%,
        transparent 25%,
        transparent 75%,
        rgba(60, 60, 60, 0.1) 75%
      );
    background-size: 60px 60px;
    opacity: 0.5;
    z-index: -1;
  }
}

/* Medieval Characters */
.medieval-characters {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120px;
  z-index: 1;
  pointer-events: none;
  display: flex;
  justify-content: space-around;
  padding: 0 50px;
}

.character {
  width: 32px;
  height: 48px;
  position: relative;
  image-rendering: pixelated;

  &.knight {
    &::before {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      background: var(--knight-color);
      clip-path: polygon(
        50% 0%,    /* helmet top */
        70% 20%,   /* helmet right */
        70% 60%,   /* body right */
        100% 60%,  /* sword right */
        100% 80%,  /* sword bottom */
        60% 80%,   /* legs right */
        50% 100%,  /* feet */
        40% 80%,   /* legs left */
        0% 80%,    /* sword left */
        0% 60%,    /* sword left */
        30% 60%,   /* body left */
        30% 20%    /* helmet left */
      );
      animation: knightIdle 1s infinite alternate;
    }
  }

  &.wizard {
    &::before {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      background: var(--wizard-color);
      clip-path: polygon(
        50% 0%,    /* hat top */
        80% 30%,   /* hat brim */
        60% 40%,   /* head */
        60% 70%,   /* robe */
        70% 100%,  /* bottom right */
        30% 100%,  /* bottom left */
        40% 70%,   /* robe */
        40% 40%,   /* head */
        20% 30%    /* hat brim */
      );
      animation: wizardFloat 2s infinite alternate;
    }
  }

  &.archer {
    &::before {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      background: var(--archer-color);
      clip-path: polygon(
        50% 10%,   /* hood top */
        70% 30%,   /* hood right */
        60% 50%,   /* body */
        90% 40%,   /* bow top */
        90% 60%,   /* bow bottom */
        60% 70%,   /* body */
        60% 100%,  /* legs right */
        40% 100%,  /* legs left */
        40% 70%,   /* body */
        10% 60%,   /* bow bottom */
        10% 40%,   /* bow top */
        40% 50%,   /* body */
        30% 30%    /* hood left */
      );
      animation: archerAim 2s infinite alternate;
    }
  }
}

/* Character Animations */
@keyframes knightIdle {
  0% { transform: translateY(0); }
  100% { transform: translateY(-2px); }
}

@keyframes wizardFloat {
  0% { transform: translateY(0) rotate(0deg); }
  100% { transform: translateY(-4px) rotate(2deg); }
}

@keyframes archerAim {
  0% { transform: translateX(-1px); }
  100% { transform: translateX(1px); }
}

/* Enhanced Campfire */
.campfire {
  position: fixed;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
  pointer-events: none;

  .ember-particles {
    position: absolute;
    bottom: 20px;
    left: 50%;
    width: 40px;
    height: 60px;
    transform: translateX(-50%);
  }

  .ember {
    position: absolute;
    width: 2px;
    height: 2px;
    background: #FFA500;
    border-radius: 50%;
    animation: float-up 2s infinite;
    opacity: 0;

    @for $i from 1 through 12 {
      &:nth-child(#{$i}) {
        left: random(40) * 1px;
        animation-delay: random(2000) * 1ms;
      }
    }
  }
}

@keyframes float-up {
  0% {
    transform: translateY(0) rotate(0deg);
    opacity: 1;
  }
  100% {
    transform: translateY(-60px) rotate(360deg);
    opacity: 0;
  }
}

