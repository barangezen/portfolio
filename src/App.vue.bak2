.campfire {
  position: fixed;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
  pointer-events: none;

  .ember-particles {
    position: absolute;
    bottom: 20px;
    left: 50%;
    width: 40px;
    height: 60px;
    transform: translateX(-50%);
  }

  .ember {
    position: absolute;
    width: 2px;
    height: 2px;
    background: #FFA500;
    border-radius: 50%;
    animation: float-up 2s infinite;
    opacity: 0;

    @for $i from 1 through 12 {
      &:nth-child(#{$i}) {
        left: random(40) * 1px;
        animation-delay: random(2000) * 1ms;
      }
    }
  }
}

.fire-container {
  position: relative;
  width: 60px;
  height: 60px;
}

.fire-base {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 6px;
  background: #FF6B00;
  border-radius: 2px;
  animation: glow 1s infinite alternate;
}

.flame {
  position: absolute;
  bottom: 6px;
  left: 50%;
  transform: translateX(-50%);
  width: 16px;
  height: 20px;
  background: #FF4500;
  clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
  animation: flicker 0.5s infinite alternate;
}

.spark {
  position: absolute;
  bottom: 26px;
  left: 50%;
  width: 4px;
  height: 4px;
  background: #FFA500;
  border-radius: 50%;
}

.spark1 { animation: spark1 2s infinite; }
.spark2 { animation: spark2 2.5s infinite; }
.spark3 { animation: spark3 1.8s infinite; }

.logs {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40px;
  height: 10px;
  background: #8B4513;
  border-radius: 4px;
  
  &::before, &::after {
    content: '';
    position: absolute;
    width: 30px;
    height: 8px;
    background: #8B4513;
    border-radius: 4px;
  }
  
  &::before {
    transform: rotate(30deg);
    left: -10px;
    bottom: 2px;
  }
  
  &::after {
    transform: rotate(-30deg);
    right: -10px;
    bottom: 2px;
  }
}

@keyframes flicker {
  0% { transform: translateX(-50%) scaleY(1); }
  100% { transform: translateX(-50%) scaleY(0.9); }
}

@keyframes glow {
  0% { filter: brightness(100%); }
  100% { filter: brightness(120%); }
}

@keyframes spark1 {
  0% { transform: translate(0, 0); opacity: 1; }
  100% { transform: translate(-10px, -20px); opacity: 0; }
}

@keyframes spark2 {
  0% { transform: translate(0, 0); opacity: 1; }
  100% { transform: translate(10px, -25px); opacity: 0; }
}

@keyframes spark3 {
  0% { transform: translate(0, 0); opacity: 1; }
  100% { transform: translate(-5px, -30px); opacity: 0; }
}

