  width: 40px;
  height: 10px;
  background: #8B4513;
  border-radius: 4px;
  
  &::before, &::after {
    content: '';
    position: absolute;
    width: 30px;
    height: 8px;
    background: #8B4513;
    border-radius: 4px;
  }
  
  &::before {
    transform: rotate(30deg);
    left: -10px;
    bottom: 2px;
  }
  
  &::after {
    transform: rotate(-30deg);
    right: -10px;
    bottom: 2px;
  }
}

@keyframes flicker {
  0% { transform: translateX(-50%) scaleY(1); }
  100% { transform: translateX(-50%) scaleY(0.9); }
}

@keyframes glow {
  0% { filter: brightness(100%); }
  100% { filter: brightness(120%); }
}

@keyframes spark1 {
  0% { transform: translate(0, 0); opacity: 1; }
  100% { transform: translate(-10px, -20px); opacity: 0; }
}

@keyframes spark2 {
